<h1>Sign-Up</h1>
<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br></br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br></br>
  <%= f.label :age %>
  <%= f.text_field :age %>
  <br></br>
  <p>Select an instrument</p>
  <%= f.collection_check_boxes :instrument_ids, @instruments, :id, :name%>
  <br></br>
  <%= f.collection_select :city_id, @cities, :id, :name%>
  <br></br>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <br></br>
  <%= f.submit %>
<% end %>
